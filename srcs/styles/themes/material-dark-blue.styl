/* --- Change colors here ---*/

/* A '+ sign' next to the color description means it has HEX 26 on alpha layer */
/* Every additional + sign adds HEX26 */

:root
  --standardBackground: #263238       /*  blue-grey darken-4  */
  --accentBackground: #37474F         /*  blue-grey darken-3  */
  --accentBackground2: #455A64        /*  blue-grey darken-2  */
  --alternativeBackground: #ECEFF1    /*  blue-grey lighten-5 */

  --mentionHighlight: #EEFF4126       /*  +lime darken-4      */
  --mentionHighlightUnseen: #EEFF4152 /*  ++lime darken-4     */

  --notification: #E0F7FA52           /*  ++cyan lighten-5    */

  --standardText: #ECEFF1             /*  blue-grey lighten-5 */
  --accentText: #CFD8DC               /*  blue-grey lighten-4 */
  --accentText2: #B0BEC5              /*  blue-grey lighten-3 */
  --alternativeText: #455A64          /*  blue-grey darken-2  */
  --alternativeText2: #546E7A         /*  blue-grey darken-1  */

  --navigationText: #0091EA           /*  light-blue accent-4 */
  --accentNavigationText: #40C4FF     /*  light-blue accent-2 */

  --customPrimary: #00C853            /*  green accent-4      */
  --customPrimaryAccent: #69F0AE      /*  green accent-2      */
  --customPrimaryDim: #00C85326       /*  +green accent-4     */

/* --- Change sidebar colors here ---*/
:root
  --sidebarColor: var(--standardBackground)
  --sidebarColorDarken: var(--accentBackground)
  --sidebarColorLighten: var(--alternativeBackground)
  --sidebarLogoColor: var(--standardBackground)
  --sidebarFontColor: var(--standardText)

